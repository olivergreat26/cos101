def d():
    num1 = float(input("Enter a number:"))
    num2 = float(input("Enter a number:"))
    print(f"The result of this operation is {num1 / num2}")
def e():
    num1 = float(input("Enter the square length:"))
    print(f"The area of the square is {num ** 2}m^2")
if userInput == "a":
